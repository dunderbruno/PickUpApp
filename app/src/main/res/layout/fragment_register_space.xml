<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.fragments.RegisterSpaceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7DDB38"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastro_de_espacos"
            android:textSize="24sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/inputNomeEspaco"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:hint="@string/nome_do_espaco"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/inputValorEspacos"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:hint="@string/valor_por_hora"
            android:importantForAutofill="no"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputTelefoneEspacos"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:hint="@string/telefone"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <EditText
            android:id="@+id/inputEmailEspacos"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/inputLogradouroEspacos"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/logradouro"
            android:importantForAutofill="no"
            android:inputType="textPersonName"></EditText>

        <EditText
            android:id="@+id/inputNumeroEspacos"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:hint="@string/numero"
            android:importantForAutofill="no"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputBairroEspacos"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/bairro"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/inputCepEspacos"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:hint="@string/cep"
            android:importantForAutofill="no"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputCidadeEspacos"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/cidade"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/inputEstadoEspacos"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/estado"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <RadioGroup
            android:id="@+id/radioGroupEspacos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="@string/tipo_de_espa_o"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioGramadoEspacos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/gramado" />

                    <RadioButton
                        android:id="@+id/radioSocietyEspacos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/society" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioQuadraEspacos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quadra" />

                    <RadioButton
                        android:id="@+id/radioTerraEspacos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terra" />
                </LinearLayout>
            </LinearLayout>

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="100sp">

            <Button
                android:id="@+id/buttonCadastrarEspaco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/white"
                android:text="@string/cadastrar" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>