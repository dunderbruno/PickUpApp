<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.fragments.UserProfileFragment">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageId"
        android:layout_width="172dp"
        android:layout_height="176dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="59dp"
        android:src="@drawable/download"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="6dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toTopOf="@+id/botaoEditarPerfilId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefoneUsuarioId" />

    <Button
        android:id="@+id/botaoEditarPerfilId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="152dp"
        android:text="Editar Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/circularImageId" />

    <TextView
        android:id="@+id/nomeUsuarioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:gravity="center"
        android:text="Nome"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/telefoneUsuarioId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/telefoneUsuarioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="Telefone"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeUsuarioId" />

    <TextView
        android:id="@+id/emailUsuarioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="43dp"
        android:gravity="center"
        android:text="Email"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/telefoneUsuarioId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circularImageId" />

    <TextView
        android:id="@+id/enderecoUsuarioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:gravity="center"
        android:text="EndereÃ§o"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/telefoneUsuarioId"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/enderecoUsuarioId2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>