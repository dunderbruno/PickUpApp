<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".gui.SpaceActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/nomedoespacoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Espaço"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enderecoespaco"
        app:layout_constraintStart_toStartOf="@+id/enderecoespaco"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/phoneespaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999-999-999"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/enderecoespaco"
        app:layout_constraintTop_toBottomOf="@+id/enderecoespaco" />

    <TextView
        android:id="@+id/enderecoespaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="Endereço Espaço"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/phoneespaco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomedoespacoid" />
</LinearLayout>